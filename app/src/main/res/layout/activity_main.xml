<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:id="@+id/NumberBoxLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
                android:id="@+id/calculatorText"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/rowAC"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/buttonAC"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_gravity="center"
                android:hint="AC"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/Row1Layout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
                android:id="@+id/Button1"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="1"/>
        <Button
                android:id="@+id/Button2"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="2"/>
        <Button
                android:id="@+id/Button3"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="3"/>

        <Button
                android:id="@+id/ButtonSuma"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="+"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/Row2Layout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
                android:id="@+id/Button4"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="4"/>
        <Button
                android:id="@+id/Button5"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="5"/>
        <Button
                android:id="@+id/Button6"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="6"/>
        <Button
                android:id="@+id/ButtonResta"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="-"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/Row3Layout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
                android:id="@+id/Button7"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="7"/>
        <Button
                android:id="@+id/Button8"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="8"/>
        <Button
                android:id="@+id/Button9"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="9"/>
        <Button
                android:id="@+id/ButtonMulti"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="x"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/Row4Layout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
                android:id="@+id/Button0"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:hint="0"/>
        <Button
                android:id="@+id/ButtonResultado"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:hint="="/>
    </LinearLayout>
</LinearLayout>